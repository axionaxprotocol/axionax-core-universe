# Environment Variables - Example Configuration

# ⚠️ DO NOT COMMIT THIS FILE WITH REAL VALUES
# Copy to .env and add your actual values
# Make sure .env is in .gitignore

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Network type: mainnet, testnet, devnet, local
NETWORK=testnet

# Chain ID (86137 for testnet, 86150 for mainnet)
CHAIN_ID=86137

# Network ID
NETWORK_ID=axionax-testnet

# =============================================================================
# RPC CONFIGURATION
# =============================================================================

# RPC server port
RPC_PORT=8545

# RPC host (0.0.0.0 for public, 127.0.0.1 for local only)
RPC_HOST=0.0.0.0

# WebSocket port
WS_PORT=8546

# Enable CORS (comma-separated origins, or * for all)
CORS_ORIGINS=*

# Maximum requests per second (rate limiting)
RATE_LIMIT=100

# =============================================================================
# P2P NETWORKING
# =============================================================================

# P2P listening port
P2P_PORT=30303

# Bootstrap nodes (comma-separated)
BOOTSTRAP_NODES=

# Maximum peer connections
MAX_PEERS=50

# =============================================================================
# VALIDATOR CONFIGURATION
# =============================================================================

# Validator mode (true/false)
VALIDATOR_ENABLED=false

# Validator address (public key)
VALIDATOR_ADDRESS=

# Validator private key (NEVER COMMIT THIS!)
# Generate with: axionax-core keygen
VALIDATOR_PRIVATE_KEY=

# Validator name/moniker
VALIDATOR_NAME=

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL connection
DATABASE_URL=postgresql://axionax:password@localhost:5432/axionax

# Redis connection
REDIS_URL=redis://localhost:6379

# RocksDB path
ROCKSDB_PATH=./data/rocksdb

# =============================================================================
# FAUCET CONFIGURATION (Testnet only)
# =============================================================================

# Faucet enabled
FAUCET_ENABLED=true

# Faucet private key (NEVER COMMIT THIS!)
FAUCET_PRIVATE_KEY=

# Amount to dispense per request (in wei)
FAUCET_AMOUNT=1000000000000000000

# Cooldown period (seconds)
FAUCET_COOLDOWN=86400

# =============================================================================
# SECURITY
# =============================================================================

# JWT secret for API authentication (NEVER COMMIT THIS!)
# Generate with: openssl rand -hex 32
JWT_SECRET=

# API key for protected endpoints (NEVER COMMIT THIS!)
API_KEY=

# Enable TLS/SSL
TLS_ENABLED=false

# TLS certificate path
TLS_CERT_PATH=

# TLS private key path
TLS_KEY_PATH=

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Log level: trace, debug, info, warn, error
LOG_LEVEL=info

# Log format: json, pretty
LOG_FORMAT=pretty

# Metrics enabled
METRICS_ENABLED=true

# Metrics port
METRICS_PORT=9090

# Prometheus pushgateway
PROMETHEUS_URL=

# =============================================================================
# PERFORMANCE
# =============================================================================

# Number of worker threads (0 = auto-detect)
WORKER_THREADS=0

# Block gas limit
BLOCK_GAS_LIMIT=30000000

# Transaction pool size
TX_POOL_SIZE=10000

# Cache size (MB)
CACHE_SIZE=2048

# =============================================================================
# DEPLOYMENT
# =============================================================================

# Deployment environment
ENVIRONMENT=testnet

# Version
VERSION=1.9.0

# Build timestamp
BUILD_DATE=2025-11-15

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Block explorer API
EXPLORER_API=

# Price oracle API
PRICE_ORACLE_API=

# IPFS gateway
IPFS_GATEWAY=https://ipfs.io

# =============================================================================
# DEAI CONFIGURATION
# =============================================================================

# DeAI enabled
DEAI_ENABLED=true

# Worker registration fee
WORKER_FEE=1000000000000000000

# Minimum worker stake
MIN_WORKER_STAKE=10000000000000000000

# Task timeout (seconds)
TASK_TIMEOUT=300

# =============================================================================
# DEVELOPMENT (Local/Devnet only)
# =============================================================================

# Development mode (enables debug features)
DEV_MODE=false

# Auto-mining (for local testing)
AUTO_MINE=false

# Test accounts (comma-separated private keys)
TEST_ACCOUNTS=

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Backup directory
BACKUP_DIR=./backups

# Backup retention (days)
BACKUP_RETENTION=30

# Auto-backup enabled
AUTO_BACKUP=true

# Backup interval (hours)
BACKUP_INTERVAL=24

# =============================================================================
# NOTES
# =============================================================================

# 1. Copy this file to .env
# 2. Replace placeholder values with actual values
# 3. NEVER commit .env file to version control
# 4. Use environment-specific .env files (.env.testnet, .env.mainnet)
# 5. Rotate secrets regularly
# 6. Use strong random values for all secrets
# 7. Restrict file permissions: chmod 600 .env

# Generate random secrets:
# - JWT_SECRET: openssl rand -hex 32
# - API_KEY: openssl rand -base64 32
# - Private keys: Use axionax-core keygen command
